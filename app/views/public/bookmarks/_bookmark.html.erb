      <p class="text-right">
        <% if novel.bookmarked_by?(current_user) %>

            <%= link_to novel_bookmarks_path(novel), method: :delete do %>
              <i class="fas fa-bookmark"></i>ブックマークを外す
            <% end %>

        <% else %>

            <%= link_to novel_bookmarks_path(novel), method: :post do %>
              <i class="far fa-bookmark"></i>ブックマーク
            <% end %>

        <% end %>
      </p>