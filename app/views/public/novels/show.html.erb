<div class="container text-center mt-5">

    <h3><%= @novel.title %></h2>




       <p class="pt-3 text-right">作者：<%= @novel.user.name %></p>

<div class="col justify-content-center">
  <%= @novel.logline %></p>
 <div class="col">

<p class="text-right">ジャンル:
<% @novel.genres.each do |genre|%>
<%= genre.genre %>
<% end %></p>
<p class="text-right">ブックマーク</p>
</div>
</div>





<div class="container">
<div class="row justify-content-center">


<div class="col-lg-9 my-3 py-4 border">

<%= @novel.foreword %>

</div>

<div class="col-lg-9 my-3 border">
<%= h(@novel.body).gsub(/\n|\r|\r\n/, "<br>").html_safe %></p>
</div>


<div class="col-lg-9 my-3 py-4 border">

<p><%= @novel.afterword %></p>
</div>

</div>
<% if current_user %>
  <%= link_to "編集する", edit_novel_path ,class: "btn btn-primary" %>
<% end %>
</div>

<div class="text-right pr-5 pb-5"><a href="#"><i class="fas fa-caret-square-up"></i>TOPへ戻る</a></div>