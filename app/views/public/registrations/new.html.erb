  <div class="mt-4 text-center">
      <h2>新規会員登録</h2>
  </div>

<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field mt-2">
        <%= f.label :name,"ユーザーネーム" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "form-control w-100" %>
      </div>

      <div class="field mt-2">
        <%= f.label :email,"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control w-100"%>
      </div>

      <div class="field mt-2">
        <%= f.label :password,"パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class: "form-control w-100" %>
      </div>

      <div class="field mt-1">
        <%= f.label :password_confirmation,"確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control w-100"%>
      </div>

      <div class="row mt-5 text-center">
        <div class="col actions">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
        <div class="col">
          <%= link_to "会員の方はこちら", new_user_session_path, class: "btn btn-success" %>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>




