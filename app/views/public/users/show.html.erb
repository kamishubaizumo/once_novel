<div class="container text-center mt-5">
  <div class="row justify-content-center">
   <table class="table col-lg-8">
   <tr>

      <!--カレントユーザーにしか表示しないようにしたいのに、うまくいかない。-->
     <td>
       <%= @user.name %>

       <% if current_user %>
         &nbsp; <%= link_to edit_user_path ,class: "btn btn-info" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
       <% end %>

     </td>
    <td><%= render "public/relationships/follow", user: @user %></Td>



     <td>
       <%= link_to user_bookmarkslist_path(@user), class: "btn btn-light" do %>
         <i class="fas fa-bookmark"></i>ブックマークリスト
       <% end %>
     </td>





   </tr>
   <tr>
     <td><%= @user.infomation %></td>
     <td>
       <%= link_to user_followslist_path(@user) ,class: "btn btn-primary" do %>
       <i class="fas fa-arrow-right"></i><i class="fas fa-user-friends"></i>フォローリスト
       <% end %>
      </td>
      <td>
       <%= link_to user_followerslist_path(@user),class: "btn btn-success" do %>
       <i class="fas fa-arrow-left"></i><i class="fas fa-user-friends"></i>フォロワーリスト
       <% end %>
     </td>
    </tr>
   </table>
  </div>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <h3>
        投稿一覧
        <% if current_user %>
          | <%= link_to "非公開の作品を確認" %>
        <% end %>
      </h3>

      <table class="table">
        <thead>
          <tr>
            <th>作品名</th>
            <th>ログライン</th>
            <th>ジャンル</th>
            <th>評価</th>
          </tr>
        </thead>
        <tbody>

        <% @novels.each do |novel| %>
          <tr>
            <td class="col-lg-2"><%= link_to "#{novel.title}",novel_path(novel.id) %></td>
            <td class="col-lg-5"><%= novel.logline %></td>
            <td class="col-lg-2">
              <% novel.genres.each do |genre| %>
                <%= genre.genre %>
              <% end %>
            </td>
            <td class="col-lg-3">評価(感想数)</td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>

    <div class="container">


  <!--コメント数-->
  <!--評価の平均値-->
  </div>



</div>