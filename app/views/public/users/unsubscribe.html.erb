      <%= link_to "退会する", withdrawal_path, method: :patch, data: { confilm: "本当に退会しますか？" },class: "btn btn-danger" %>
    </div>
    <div class="col mx-5 text-left">
      <%= link_to "退会しない", user_path(current_user), class: "btn btn-primary" %>
