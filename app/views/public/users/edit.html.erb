<div class="mt-5 text-center">
  <h2>ユーザー編集</h2>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5">

      <%= form_with model: @user do |f| %>

        <%= f.label :name, "ユーザーネーム" ,class: "mt-3" %><br>
        <%= f.text_field :name, autfocus: true ,class: "form-control" %>

        <%= f.label :infomation, "自己紹介" ,class: "mt-3" %><br>
        <%= f.text_area :infomation, autfocus: true ,size: " 1x7",class: "form-control" %>

        <%= f.label :email, "メールアドレス",class: "mt-3"  %><br>
        <%= f.email_field :email, autfocus: true ,class: "form-control" %>



        <div class="row mt-5">
          <div class="col mb-5 text-center">
            <%= f.submit "更新", class: "btn btn-success" %>
          </div>
      <% end %>
        </div>

        <div class="col mt-5 text-center">
          <% if current_user %>
            <%= link_to "退会する", user_unsubscribe_path(current_user), class: "btn btn-danger" %>
          <% end %>
        </div>
    </div>

  </div>
</div>
