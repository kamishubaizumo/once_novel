  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="d-flex flex-column">

      <%#= f.select :range, options_for_select([['User'], ['Novel']]) %>
      <div class="col mb-2">
      <span><%= f.radio_button(:range, "User")%><small>ユーザー名</small></span>
      <span><%= f.radio_button(:range, "Novel")%><small>作品名</small></span>

        <%= f.select :search, options_for_select([["部分一致","partial_match"],["完全一致","perfect_match"]]) %>
      </div>

      <div class="col text-right">
        <%= f.text_field :word %>
      </div>
      <div class="col text-right">
       <%= f.submit "検索",class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>