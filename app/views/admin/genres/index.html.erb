<div class="mt-5 text-center">
  <h2>ジャンル一覧・追加</h2>
</div>


<div class="container">
  <div class="row">

    <%= form_with model: @genre, url:admin_genres_path, method: :post do |f| %>
      <%= f.text_field :genre %>
      <%= f.submit "登録する" %>
    <% end %>



    <% @genres.each do |genres| %>
    <%= link_to edit_admin_genre_path(genres.id) do %>
      <%= genres.genre %>
      <% end %>
    <% end %>

  </div>
</div>