
<div class="container-fulid my-5 text-center">
  <small>  <%= link_to "ユーザー一覧", admin_root_path %>&nbsp; |&nbsp; <b>ジャンル一覧</b></small>
  <h2 class="mt-3">ジャンル一覧・追加</h2>
</div>

<div class="container my-5">
  <div class="row my-5 justify-content-center">
    <div class="col-lg-5">
      <%= form_with model: @genre, url:admin_genres_path, method: :post do |f| %>
        <%= f.text_field :genre ,class: "form-control"%>
    </div>
    <div class="col-lg-1">
        <%= f.submit "登録する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

  <div class="row justify-content-center">
    <div class="col-8 col-sm-5 row">
      <% @genres.each do |genres| %>
        <%= link_to edit_admin_genre_path(genres.id) do %>
      <ul>
        <li class="row-col-4">
          <%= genres.genre %>
        </li>
      </ul>
        <% end %>
      <% end %>
    </div>
  </div>
