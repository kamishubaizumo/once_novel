<div class="container-fluid mt-5 text-center">
    <small>  <b>ユーザー一覧</b> &nbsp; | &nbsp; <%= link_to "ジャンル一覧", admin_genres_path %></small>
  <h2 class="mt-3">ユーザー一覧</h2>
</div>

<div class="container mt-5 justify-content-center d-flex">
  <div class="col-10">

    <% @users.each do |user| %>
    <div class="row border-info border-top">
      <div class="col-sm-8 px-3">
        ユーザーネーム:
        <h5>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </h5>
        <p>
          自己紹介:<br>
          <%= user.infomation %>
        </p>
      </div>

      <div class="col-sm-3 px-3">
        <p>
          <th class="col-sm-3">作品数:</th>
            <td><%= user.novels.count %></td>
        </p>
          <!--退会済みかどうかをif文でtrue,elseで返せる ==を省略できる-->
          <th>ステータス:</th>
            <td>
              <% if user.is_deleted %>退会済み<% else %>有効<% end %>
            </td>
        </p>
      </div>
    </div>
    <% end %>

    <%= paginate @users %>
  </div>
</div>