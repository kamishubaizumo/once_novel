<div class="container mt-5 text-center">
    <small>  <b>ユーザー一覧</b> &nbsp; | &nbsp; <%= link_to "ジャンル一覧", admin_genres_path %></small>
  <h2 class="mt-3">ユーザー一覧</h2>
</div>

<div class="container">
  <div class="row justify-content-center">

<table class="table">
  <tr>
    <thead>
      <th class="col-lg-3">ユーザーネーム</th>
      <th>infomation</th>
      <th>投稿数</th>
      <th class="col-lg-3">ステータス<th>
    </thead>
  </tr>


  <% @users.each do |users| %>
  <tbody>
    <tr>
      <td>
        <%= link_to admin_user_path(users.id) do %>
          <%= users.name %>
        <% end %>
      </td>
      <td>
        <%= users.infomation %>
      </td>
      <td>
        <%= users %>
      </td>
      <td>
        <%= users.is_deleted %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>